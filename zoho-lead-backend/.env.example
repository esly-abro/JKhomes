# Environment Configuration

# Server
PORT=3000
NODE_ENV=development

# Zoho OAuth Credentials
ZOHO_CLIENT_ID=1000.XXXXXXXXXXXXXXXXXX
ZOHO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ZOHO_REFRESH_TOKEN=1000.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Zoho API URLs (India Data Center)
ZOHO_API_DOMAIN=https://www.zohoapis.in
ZOHO_ACCOUNTS_URL=https://accounts.zoho.in

# Zoho CRM Configuration
ZOHO_CRM_SCOPE=ZohoCRM.modules.ALL

# Security - API Key Authentication
# Generate a strong random key (min 32 characters)
API_KEY=your_secret_api_key_here_min_32_chars

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Idempotency
IDEMPOTENCY_TTL_MS=86400000
IDEMPOTENCY_MAX_CACHE=10000

# Webhook Signatures (optional - for Meta, Stripe, etc.)
# META_WEBHOOK_SECRET=your_meta_webhook_secret
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# VAPI AI Voice Configuration
VAPI_ENABLED=true
VAPI_API_KEY=sk_live_your_vapi_api_key_here
VAPI_ASSISTANT_ID=asst_your_assistant_id_here
VAPI_PHONE_NUMBER_ID=ph_your_phone_number_id_here
VAPI_WEBHOOK_SECRET=your_webhook_secret_here
VAPI_SERVER_URL=https://api.vapi.ai

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_AGENT_ID=your_agent_id
ELEVENLABS_PHONE_NUMBER_ID=your_phone_number_id
ELEVENLABS_WEBHOOK_SECRET=your_webhook_hmac_secret

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
# WhatsApp-enabled number (can be same as voice number)
TWILIO_WHATSAPP_NUMBER=+1234567890

# OpenAI Configuration (for AI intent analysis - optional, fallback available)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Base URL for webhooks (use ngrok URL for local development)
BASE_URL=https://your-ngrok-url.ngrok-free.app
SERVER_URL=https://your-production-server.com

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug
