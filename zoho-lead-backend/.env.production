# Production Environment Variables
# Copy this to .env and fill in your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# ZOHO CRM CONFIGURATION
# ===========================================
# Get these from: https://api-console.zoho.in/
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here
ZOHO_API_DOMAIN=https://www.zohoapis.in
ZOHO_ACCOUNTS_URL=https://accounts.zoho.in
ZOHO_CRM_SCOPE=ZohoCRM.modules.ALL

# ===========================================
# VAPI AI VOICE CONFIGURATION
# ===========================================
# Get these from: https://dashboard.vapi.ai
VAPI_ENABLED=true
VAPI_API_KEY=sk_live_your_vapi_api_key_here
VAPI_ASSISTANT_ID=asst_your_assistant_id_here
VAPI_PHONE_NUMBER_ID=ph_your_phone_number_id_here
VAPI_WEBHOOK_SECRET=your_webhook_secret_here
VAPI_SERVER_URL=https://api.vapi.ai

# ===========================================
# SECURITY
# ===========================================
# Generate a strong random key (min 32 characters)
API_KEY=your_production_api_key_min_32_chars_here

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# IDEMPOTENCY
# ===========================================
IDEMPOTENCY_TTL_MS=86400000
IDEMPOTENCY_MAX_CACHE=10000

# ===========================================
# BASE URL (Your production domain)
# ===========================================
BASE_URL=https://yourdomain.com

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
# Options: error, warn, info, debug
